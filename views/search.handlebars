<main class="search-main">

      <div class="search-header">
        <h1 class="subtitle is-1">Search Your Perfect Match...</h1>
        <p class="subtitle is-5">Enter the preferred age, gender and postcode and find YOUR forever.</p>
      </div>
      <div class="columns">
      <form class="column search-form">
        <div class="columns search-age-container">
          <div class="column is-one-third field">
            <label class="search-label subtitle is-2 label">Min Age:</label>
            <div class="search-dropdown select is-link">
                <select id="search-age1">
                  {{!-- Loop from JS file to loop over age --}}
              </select>
            </div>   
        </div>
          <div class="column is-two-third field">
          <label class="search-label subtitle is-2 label">Max Age:</label>
              <div class="search-dropdown select is-link">
                  <select id="search-age2">
                    {{!-- Loop from JS file to loop over age --}}
                </select>
              </div>   
          </div>
        </div>
        <div class="field">
          <label class="search-label label is-normal">Gender:</label>
                <div class="control">
                  <div class="search-gender select is-link">
                    <select id="search-gender">
                      <option>Male</option>
                      <option>Female</option>
                      <option>Other</option>
                    </select>
                </div>
          </div>
        </div>
        <div class="field">
        <label class="search-label label">Postcode:</label>
          <div class="control">
            <input id="search-postcode" class="input is-link" type="postcode" placeholder="e.g. 2000">
          </div>
        </div>
        <div class="control">
            <button type="submit" class="button is-medium is-link is-link">Search</button>
        </div>
   </form>
   
