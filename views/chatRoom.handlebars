<main class="room-main">

 <div class="chat-container-room">
    <header class="chat-header">
      <h1 class="title is-2">Granny Crush Chat</h1>
      <a href="/chat" class="btn-leave button is-danger">Leave Room</a>
    </header>
    <div class="roomchat-main">
      <div class="chat-sidebar">
        <h3 class="title is-5"><i class="fas fa-comments"></i> Room Name:</h3>
        <h2 id="room-name"></h2>
        <h3 class="title is-5"><i class="fas fa-users"></i> Users</h3>
        <ul id="users">
        </ul>
      </div>
      <div class="chat-messages"></div>
    </div>
    <div class="chat-form-container">
      <form id="chat-form">
        <input class="input is-link" id="msg" type="text" placeholder="Enter Message" required autocomplete="off"/>
        <button class="btn-send button is-success"><i class="fas fa-paper-plane"></i>  Send</button>
      </form>
    </div>
  </div>

</main>

