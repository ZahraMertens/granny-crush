                      <option>76</option>
                      <option>77</option>
                      <option>78</option>  
                      <option>79</option>
                      <option>80</option>
                      <option>81</option>
                    </select>
                  </div>
                </div>
              <label class="label is-normal">Your Age: (If you are 68 years old, enter "68")</label>
                <div class="control has-icons-left has-icons-right">
                  <input class="input is-success" type="text" placeholder="68" value="">
              </div>

              <label class="label is-normal">Fun Fact:</label>
                <div class="control has-icons-left has-icons-right">
                  <textarea class="input is-success" type="text" placeholder="I am a crazy cat lady" value="2000" rows="1"></textarea>
