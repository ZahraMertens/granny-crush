<main class="signup-main">

    <form class="signup-form form column is-one-third">
            <div>
                <h3 class="title is-2">Sign Up</h3>
            </div>
            <br>
              <div class="field">
                <label class="label is-normal">Username:</label>
                <div class="control has-icons-left has-icons-right">
                  <input id="signup-username" class="input is-success" type="text" placeholder="Your preferred name" value="">
                  <span class="icon is-small is-left">
                    <i class="fas fa-user"></i>
                  </span>
                  <span class="icon is-small is-right">
                    <i class="fas fa-check"></i>
                  </span>
                </div>
                <p class="title is-6 help is-black">This username is available</p>
              </div>
              
              <div class="field">
                <label class="label is-normal">Email:</label>
                <div class="control has-icons-left has-icons-right">
                  <input id="signup-email" class="input is-danger" type="email" placeholder="yourName@gmail.com" value="">
                  <span class="icon is-small is-left">
                    <i class="fas fa-envelope"></i>
                  </span>
                  <span class="icon is-small is-right">
                    <i class="fas fa-exclamation-triangle"></i>
                  </span>
                </div>
                <p class="title is-6 help is-black">This email is invalid</p>
              </div>
              
              <div class="field">
                <label class="label is-normal">Gender</label>
                <div class="control">
                  <div class="signup-gender select">
                    <select>
                      <option>Male</option>
                      <option>Female</option>
                      <option>Other</option>
                    </select>
                  </div>
                </div>
              </div>
              
              <div class="field">
                <label class="label">Phone:</label>
                <div class="control">
                  <div class="field is-horizontal">
                <div class="field-body">
                  <div class="field is-expanded">
                    <div class="field has-addons">
                      <p class="control">
                        <a class="button is-static">
                          +61
                        </a>
                      </p>
                      <p class="control is-expanded">
                        <input class="input" type="tel" placeholder="Your phone number">
                      </p>
                    </div>
                    <p class="help">Do not enter the first zero</p>
                  </div>
                </div>
              </div>
                </div>
              </div>

              <label class="label is-normal">Postcode:</label>
                <div class="control has-icons-left has-icons-right">
                  <input class="input is-success" type="text" placeholder="Text input" value="2000">
              </div>
              <div class="field">
                <label class="label is-normal">Age:</label>
                <div class="control">
                  <div class="select">
                    <select>
